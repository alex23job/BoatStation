<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoatStation"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="BoatStation.MainWindow"
        mc:Ignorable="d"
        Title="ЛОДОЧНАЯ СТАНЦИЯ" Height="450" Width="890" Icon="MainIcon.ico" Background="#FFD0D9FF" FontFamily="Times New Roman" FontSize="16" Closing="AppClosing" MinWidth="890" MinHeight="450" Foreground="#FF061BA0" MaxWidth="890">
    <Grid Background="#FF5750FB">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" MinHeight="80"/>
            <RowDefinition Height="200*" MinHeight="200"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" MinWidth="220"/>
            <ColumnDefinition Width="580*" MinWidth="580"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Background="#FF8A99FB" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="logo" Margin="5"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" Background="#FF011593">
            <Button x:Name="newBooking" Content="Новая бронь" Background="#FF90D0EE" Height="40" Margin="5,15,5,5" FontSize="24" FontWeight="Bold" Foreground="#FF011593"/>
            <Button x:Name="delBooking" Content="Снять бронь" Background="#FF90D0EE" Height="40" Margin="5" FontSize="24" FontWeight="Bold" Foreground="#FF011593"/>
            <Button x:Name="editBooking" Content="Изменить бронь" Background="#FF90D0EE" Height="40" Margin="5" FontSize="24" FontWeight="Bold" Foreground="#FF011593"/>
            <Button x:Name="manual" Content="Инструкция" Background="#FF90D0EE" Height="40" Margin="5" FontSize="24" FontWeight="Bold" Foreground="#FF011593"/>
        </StackPanel>
        <StackPanel x:Name="loginView" Orientation="Vertical" Grid.Column="1" Grid.RowSpan="2" Visibility="Hidden">
            <TextBlock Text="Добро пожаловать на лодочную станцию нашего города !" Foreground="#FFCFEEFD" HorizontalAlignment="Center" Margin="0,50,0,20" FontSize="36" FontWeight="Bold" TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Center"/>
            <TextBlock Text="Пожалуйста, авторизуйтесь ..." Foreground="#FF90D0EE" HorizontalAlignment="Center" Margin="0,0,0,10" FontSize="28" FontWeight="Bold" TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Center"/>
            <Button x:Name="login" Content="ВОЙТИ" Width="260" Height="50" Background="#FF90D0EE" FontSize="24" FontWeight="Bold" Foreground="#FF011593" BorderBrush="#FF011593" Padding="2"/>
            <Button x:Name="registration" Content="РЕГИСТРАЦИЯ" Width="260" Height="50" Background="#FF90D0EE" FontSize="24" FontWeight="Bold" Foreground="#FF011593" BorderBrush="#FF011593" Padding="2" Margin="0,20"/>
        </StackPanel>
        <StackPanel x:Name="ordersView"  Orientation="Vertical" Grid.Column="1" Grid.RowSpan="2" Visibility="Visible">
            <Label Content="Просмотр забронированного" Foreground="#FF011593" Height="60" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="36" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10">
                <Label Content="Выберите дату : " Foreground="#FFD6E8FF" FontSize="22"/>
                <DatePicker x:Name="date" IsDropDownOpen="False" SelectedDateFormat="Short" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" />
            </StackPanel>
            <DataGrid x:Name="ordersData" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Margin="1" AutoGenerateColumns="False" IsReadOnly="True" FontSize="14">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=DateUpdate}" FontSize="14" FontFamily="Times New Roman" Header="Название" MinWidth="100"/>
                    <DataGridTextColumn Binding="{Binding Path=DateUpdate}" FontSize="14" FontFamily="Times New Roman" Header="Номер" MinWidth="50"/>
                    <DataGridTextColumn Binding="{Binding Path=DateUpdate}" FontSize="14" FontFamily="Times New Roman" Header="09:00" MinWidth="20"/>
                    <DataGridTextColumn Binding="{Binding Path=DateUpdate}" FontSize="14" FontFamily="Times New Roman" Header="10:00" MinWidth="20"/>
                    <DataGridTextColumn Binding="{Binding Path=DateUpdate}" FontSize="14" FontFamily="Times New Roman" Header="11:00" MinWidth="20"/>
                    <DataGridTextColumn Binding="{Binding Path=DateUpdate}" FontSize="14" FontFamily="Times New Roman" Header="12:00" MinWidth="20"/>
                    <DataGridTextColumn Binding="{Binding Path=DateUpdate}" FontSize="14" FontFamily="Times New Roman" Header="13:00" MinWidth="20"/>
                    <DataGridTextColumn Binding="{Binding Path=DateUpdate}" FontSize="14" FontFamily="Times New Roman" Header="14:00" MinWidth="20"/>
                    <DataGridTextColumn Binding="{Binding Path=DateUpdate}" FontSize="14" FontFamily="Times New Roman" Header="15:00" MinWidth="20"/>
                    <DataGridTextColumn Binding="{Binding Path=DateUpdate}" FontSize="14" FontFamily="Times New Roman" Header="16:00" MinWidth="20"/>
                    <DataGridTextColumn Binding="{Binding Path=DateUpdate}" FontSize="14" FontFamily="Times New Roman" Header="17:00" MinWidth="20"/>
                    <DataGridTextColumn Binding="{Binding Path=DateUpdate}" FontSize="14" FontFamily="Times New Roman" Header="18:00" MinWidth="20"/>
                    <DataGridTextColumn Binding="{Binding Path=DateUpdate}" FontSize="14" FontFamily="Times New Roman" Header="19:00" MinWidth="20"/>
                    <DataGridTextColumn Binding="{Binding Path=DateUpdate}" FontSize="14" FontFamily="Times New Roman" Header="20:00" MinWidth="20"/>
                </DataGrid.Columns> 
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
